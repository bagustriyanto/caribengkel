@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization;

@inject IViewLocalizer Localizer

@{
Layout = "_MainLayout";
ViewBag.Title = "Master Data - Menu";
}
<div class="section-header">
    <h1>Menu</h1>
    <div class="section-header-breadcrumb">
        <div class="breadcrumb-item active"><a href="#">Master Data</a></div>
        <div class="breadcrumb-item">Menu</div>
    </div>
</div>
<div id="masterMenu">
    <button hidden id='btnModalAdd' type="button"></button>
    <button hidden id='btnModalEdit' type="button"></button>
    <button hidden id='btnModalView' type="button"></button>
    <div class="row mt-4" v-if="showForm">
        <form id="menuForm" autocomplete="off" style="width: 100%;" v-on:submit="onSubmit">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        {{formTitle}}
                    </div>
                    <div class="card-body">
                        <div class="form-group row mb-4">
                            <label
                                class="col-form-label text-md-right col-12 col-md-3 col-lg-3">@Localizer["label_title"]</label>
                            <div class="col-sm-12 col-md-4">
                                <input type="text" v-model="form.title" class="form-control"
                                    v-bind:class="{'is-invalid': titleValidation}">
                                <div class="invalid-feedback" v-if="titleValidation">
                                    Judul harus diisi
                                </div>
                            </div>
                        </div>
                        <div class="form-group row mb-4">
                            <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Url</label>
                            <div class="col-sm-12 col-md-4">
                                <input type="text" v-model="form.url" class="form-control"
                                    v-bind:class="{'is-invalid': urlValidation}">
                                <div class="invalid-feedback" v-if="urlValidation">
                                    Url harus diisi
                                </div>
                            </div>
                        </div>
                        <div class="form-group row mb-4">
                            <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Parent</label>
                            <div class="col-sm-12 col-md-4">
                                <input type="text" v-model="form.parent" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row mb-4">
                            <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Status</label>
                            <div class="col-sm-12 col-md-2">
                                <select class="form-control selectric" v-model="form.cbStatus">
                                    <option v-bind:value="0">Non Aktif</option>
                                    <option v-bind:value="1">Aktif</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row mb-4">
                            <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
                            <div class="col-sm-12 col-md-7" style="text-align: right;">
                                <button class="btn btn-danger" v-on:click="formCancel">Batal</button>
                                <button class="btn btn-primary" v-if="formType === 0 || formType === 1">Simpan</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="float-left">
                        <select class="form-control selectric">
                            <option>Pilih Aksi</option>
                            <option>Hapus Semua</option>
                        </select>
                    </div>
                    <div class="float-left">
                        <button class="btn btn-lg btn-success btn-create" style="margin-left: 10px;"
                            v-on:click="createClick"><i class="far fa-edit"></i>
                            Buat Menu</button>
                    </div>
                    <div class="float-right">
                        <form>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Cari" v-model="searchTerm">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" v-on:click="searchMenu"><i
                                            class="fas fa-search"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="clearfix mb-3"></div>

                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center pt-2">
                                        <div class="custom-checkbox custom-checkbox-table custom-control">
                                            <input type="checkbox" data-checkboxes="mygroup" data-checkbox-role="dad"
                                                class="custom-control-input" id="checkbox-all">
                                            <label for="checkbox-all" class="custom-control-label">&nbsp;</label>
                                        </div>
                                    </th>
                                    <th>@Localizer["label_title"]</th>
                                    <th>@Localizer["label_url"]</th>
                                    <th>@Localizer["label_parent"]</th>
                                    <th>@Localizer["label_status"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="(item, index) in list" :key="index">
                                    <td>
                                        <div class="custom-checkbox custom-control">
                                            <input type="checkbox" data-checkboxes="mygroup"
                                                class="custom-control-input" id="checkbox-2">
                                            <label for="checkbox-2" class="custom-control-label">&nbsp;</label>
                                        </div>
                                    </td>
                                    <td>{{item.title}}
                                        <div class="table-links">
                                            <a href="#" v-on:click="viewClick(item)">Lihat</a>
                                            <div class="bullet"></div>
                                            <a href="#" v-on:click="editClick(item)">Ubah</a>
                                            <div class="bullet"></div>
                                            <a href="#" class="text-danger">Hapus</a>
                                        </div>
                                    </td>
                                    <td>
                                        <a v-bind:href="item.url">{{item.url}}</a>
                                    </td>
                                    <td></td>
                                    <td>
                                        <div class="badge"
                                            v-bind:class="{'badge-primary': item.status, 'badge-danger': !item.status}">
                                            {{item.status === true ? 'Aktif' : 'Non Aktif'}}</div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="float-right">
                        <nav>
                            <ul class="pagination">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <li class="page-item active">
                                    <a class="page-link" href="#">1</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">2</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">3</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/apps/master/menu.js"></script>