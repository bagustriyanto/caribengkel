@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization;

@inject IViewLocalizer Localizer

@{
Layout = "_MainLayout";
ViewBag.Title = "Master Data - Menu";
}
<div class="section-header">
    <h1>Menu</h1>
    <div class="section-header-breadcrumb">
        <div class="breadcrumb-item active"><a href="#">Master Data</a></div>
        <div class="breadcrumb-item">Menu</div>
    </div>
</div>
<div id="masterMenu">
    <button hidden id='btnModalAdd' type="button"></button>
    <button hidden id='btnModalEdit' type="button"></button>
    <button hidden id='btnModalView' type="button"></button>
    <div class="row mt-4" v-if="showForm">
        <form id="menuForm" autocomplete="off" style="width: 100%;" v-on:submit.prevent="onSubmit">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        {{formTitle}}
                    </div>
                    <div class="card-body">
                        <div class="form-group row mb-4">
                            <label
                                class="col-form-label text-md-right col-12 col-md-3 col-lg-3">@Localizer["label_title"]</label>
                            <div class="col-sm-12 col-md-4">
                                <input type="text" v-model="form.title" class="form-control"
                                    v-bind:class="{'is-invalid': titleValidation}">
                                <div class="invalid-feedback" v-if="titleValidation">
                                    @Localizer["form_required"]
                                </div>
                            </div>
                        </div>
                        <div class="form-group row mb-4">
                            <label
                                class="col-form-label text-md-right col-12 col-md-3 col-lg-3">@Localizer["label_url"]</label>
                            <div class="col-sm-12 col-md-4">
                                <input type="text" v-model="form.url" class="form-control"
                                    v-bind:class="{'is-invalid': urlValidation}">
                                <div class="invalid-feedback" v-if="urlValidation">
                                    @Localizer["form_required"]
                                </div>
                            </div>
                        </div>
                        <div class="form-group row mb-4">
                            <label
                                class="col-form-label text-md-right col-12 col-md-3 col-lg-3">@Localizer["label_parent"]</label>
                            <div class="col-sm-12 col-md-4">
                                <input type="text" v-model="form.parent" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row mb-4">
                            <label
                                class="col-form-label text-md-right col-12 col-md-3 col-lg-3">@Localizer["label_status"]</label>
                            <div class="col-sm-12 col-md-2">
                                <select class="form-control selectric" v-model="form.cbStatus">
                                    <option v-bind:value="0">@Localizer["status_inactive"]</option>
                                    <option v-bind:value="1">@Localizer["status_active"]</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row mb-4">
                            <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
                            <div class="col-sm-12 col-md-7" style="text-align: right;">
                                <button class="btn btn-danger"
                                    v-on:click="formCancel">@Localizer["action_cancel"]</button>
                                <button class="btn btn-primary"
                                    v-if="formType === 0 || formType === 1">@Localizer["action_save"]</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="float-left">
                        <select class="form-control selectric">
                            <option>Pilih Aksi</option>
                            <option>Hapus Semua</option>
                        </select>
                    </div>
                    <div class="float-left">
                        <button class="btn btn-lg btn-success btn-create" style="margin-left: 10px;"
                            v-on:click="createClick"><i class="far fa-edit"></i>
                            Buat Menu</button>
                    </div>
                    <div class="float-right">
                        <form>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder='@Localizer["placeholder_title"]'
                                    v-model="searchTerm">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" v-on:click.prevent="searchMenu"><i
                                            class="fas fa-search"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="clearfix mb-3"></div>

                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center pt-2">
                                        <div class="custom-checkbox custom-checkbox-table custom-control">
                                            <input type="checkbox" data-checkboxes="mygroup" data-checkbox-role="dad"
                                                class="custom-control-input" id="checkbox-all">
                                            <label for="checkbox-all" class="custom-control-label">&nbsp;</label>
                                        </div>
                                    </th>
                                    <th>@Localizer["label_title"]</th>
                                    <th>@Localizer["label_url"]</th>
                                    <th>@Localizer["label_parent"]</th>
                                    <th>@Localizer["label_status"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="(item, index) in list" :key="index">
                                    <td>
                                        <div class="custom-checkbox custom-control">
                                            <input type="checkbox" data-checkboxes="mygroup"
                                                class="custom-control-input" id="checkbox-2">
                                            <label for="checkbox-2" class="custom-control-label">&nbsp;</label>
                                        </div>
                                    </td>
                                    <td>{{item.title}}
                                        <div class="table-links">
                                            <a href="#" v-on:click="viewClick(item)">{{$lang.action_view}}</a>
                                            <div class="bullet"></div>
                                            <a href="#" v-on:click="editClick(item)">{{$lang.action_update}}</a>
                                            <div class="bullet"></div>
                                            <a href="#" v-on:click="deleteClick(item)"
                                                class="text-danger">{{$lang.action_delete}}</a>
                                        </div>
                                    </td>
                                    <td>
                                        <a href="#">{{item.url}}</a>
                                    </td>
                                    <td>{{item.parentNavigation !== null ? item.parentNavigation.title : ''}}</td>
                                    <td>
                                        <div class="badge"
                                            v-bind:class="{'badge-primary': item.status, 'badge-danger': !item.status}">
                                            {{item.status === true ? $lang.status_active : $lang.status_inactive}}</div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="float-right">
                        <nav>
                            <paginate v-model="paging.number" :page-count="paging.page" :click-handler="pagingClick"
                                :prev-text="'&laquo;'" :next-text="'&raquo;'" :container-class="'pagination'"
                                :page-class="'page-item'" :page-link-class="'page-link'">
                            </paginate>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/apps/master/menu.js"></script>